<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.Restaurants">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/CPwhite"/>


    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchwidget"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:paddingTop="5dp"
        android:background="@drawable/search"
        android:layout_centerHorizontal="true"
        android:layoutDirection="rtl"
        android:layout_marginTop="30dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/CPorange"
        app:cardCornerRadius="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/searchwidget"
        android:layout_marginTop="40dp"
        app:cardElevation="20dp"
        android:elevation="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/innerCardview"
            android:layout_width="300dp"
            android:layout_height="380dp"
            app:cardCornerRadius="10dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/CPwhite"
            android:layout_margin="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/SpathloImage"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:background="@drawable/food"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:text="Johan's Burgers"
                android:paddingStart="10dp"
                android:textSize="18dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:text="12 min"
                android:paddingStart="10dp"
                android:textSize="18dp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:text="Status: Open"
                android:paddingStart="10dp"
                android:textSize="18dp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="270dp"
                android:text="Hours: 8am-10pm"
                android:paddingStart="10dp"
                android:textSize="18dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:text="Phone: 012 123 1234"
                android:paddingStart="10dp"
                android:textSize="18dp"/>

        </androidx.cardview.widget.CardView>


<!--        icons and submit button-->


    </androidx.cardview.widget.CardView>







</RelativeLayout>